<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <title>Page Title</title>
</head>
<body class="container bg-light">
    <nav class="navbar navbar-light bg-light">
        <div class="d-flex align-items-center text-center container">
            <a class="btn btn-secondary btn-lg w-25" href="/">Home</a>
            <!-- Split dropstart button -->
            <div class="btn-group">
                <div class="btn-group dropstart" role="group">
                    <button type="button" class="btn btn-secondary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                        <span class="visually-hidden">Toggle Dropstart</span>
                    </button>
                    <ul class="dropdown-menu rounded list-group-flush bg-light p-0">
                        {% for product in cart.products %}
                            <li class="container list-group-item bg-light">
                                <label><b>Name:</b></label>
                                <p class="me-2">{{ product.name }}</p>
                                <label><b>Manufacturer:</b></label>
                                <p class="me-2">{{ product.manufacturer }}</p>
                                <label><b>Price:</b></label>
                                <p>{{ product.newPrice }} HUF</p>
                            </li>
                        {% endfor %}
                        <li><hr class="dropdown-divider"></li>
                        <li class="container list-group-item bg-light">= {{ cart.sum }} HUF</li>
                    </ul>
                </div>
                <a class="btn btn-secondary btn-lg ms-auto" href="/cart"><i class="bi bi-cart3 text-light"></i> {{ cart.products|length }}</a>
            </div>
        </div>
    </nav>
    <br>
    {% block list %}
    {% endblock %}
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<script type="text/javascript" src="/assets/js/app.js"></script>
</html>