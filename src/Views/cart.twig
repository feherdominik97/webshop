{% extends ['/layout/base.twig'] %}

{% block list %}
    <ul class="list-group list-group-flush">
        {% for key, product in cart.products %}
            <li class="container list-group-item d-flex bg-light">
                <div>
                    <label>Name:</label>
                    <p class="me-2">{{ product.name }}</p>
                    <label>Manufacturer:</label>
                    <p class="me-2">{{ product.manufacturer }}</p>
                    <label>Price:</label>
                    <p>{{ product.newPrice }} HUF</p>
                </div>
                <div class="ms-auto d-flex">
                    <button type="button" onclick="deleteFromCart({{ key }})" class="btn btn-light"><i class="bi bi-dash-square" style="font-size: 2rem"></i></button>
                </div>
            </li>
        {% endfor %}
    </ul>


    <div><hr class="dropdown-divider"></div>
    <div class="container bg-light d-flex"><b class="ms-auto">= {{ cart.sum }} HUF</b></div>
{% endblock %}